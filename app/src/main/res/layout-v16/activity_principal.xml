<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#1abff1"
    android:backgroundTint="#0b95f1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME"
        android:id="@+id/textView1"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:focusable="true"
        android:fontFamily="@string/abc_searchview_description_query"
        android:theme="@style/AlertDialog.AppCompat.Light"
        android:transitionName="@string/abc_capital_on"
        android:translationZ="@dimen/abc_action_bar_subtitle_top_margin_material"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICES AT YOUR HOME"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#080808" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Your City"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:layout_gravity="center_horizontal"
        android:entries="@array/state_names"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/b"
        android:layout_gravity="center_horizontal" />
</LinearLayout>